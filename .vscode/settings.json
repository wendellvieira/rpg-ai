{
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.formatOnSave": true,
  "chat.agent.maxRequests": 20000,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": ["source.fixAll.eslint"],
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "vue"],
  "typescript.tsdk": "node_modules/typescript/lib",

  // Configura√ß√µes espec√≠ficas do projeto RPG AI
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.cwd": "${workspaceFolder}",

  // Atalhos de comando r√°pido
  "tasks.autoDetect": "on",

  // Configura√ß√µes para desenvolvimento Vue/Quasar
  "vetur.validation.template": false,
  "vetur.validation.style": false,
  "vetur.validation.script": false,

  // Configura√ß√µes de arquivo
  "files.associations": {
    "*.vue": "vue"
  },

  // Configura√ß√µes para melhor experi√™ncia com TypeScript
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Facilitar navega√ß√£o no projeto
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": true,

  // üîß Terminal Auto-Approval Configuration for RPG-AI Development
  // Based on VS Code v1.102 Terminal auto approval feature
  // Allows GitHub Copilot to execute safe commands automatically
  "github.copilot.chat.agent.terminal.allowList": {
    // Build e desenvolvimento
    "npm run": true,
    "npm install": true,
    "npm ci": true,
    "yarn": true,
    "pnpm": true,

    // Quasar framework
    "quasar dev": true,
    "quasar build": true,
    "quasar create": true,
    "quasar info": true,
    "npx quasar": true,

    // TypeScript
    "tsc": true,
    "npx tsc": true,
    "vue-tsc": true,
    "npx vue-tsc": true,

    // Linting e formata√ß√£o
    "eslint": true,
    "npx eslint": true,
    "prettier": true,
    "npx prettier": true,

    // Testing
    "jest": true,
    "npx jest": true,
    "vitest": true,
    "npx vitest": true,

    // Git (comandos seguros)
    "/^git (status|log|diff|branch|show|add|commit|stash|checkout|pull)$/": true,
    "git status": true,
    "git log": true,
    "git diff": true,
    "git branch": true,
    "git show": true,
    "git add": true,
    "git commit": true,
    "git stash": true,
    "git checkout": true,
    "git pull": true,
    "git commit -m": true,

    // ‚úÖ MANIPULA√á√ÉO DE ARQUIVOS SEGURA (para refatora√ß√£o)
    "mkdir": true,
    "rmdir": true,
    "rm": true,
    "mv": true,
    "cp": true,
    "touch": true,
    "ln": true,

    // Comandos de navega√ß√£o e visualiza√ß√£o
    "ls": true,
    "cat": true,
    "pwd": true,
    "echo": true,
    "cd": true,
    "tree": true,
    "find": true,
    "grep": true,
    "head": true,
    "tail": true,
    "wc": true,
    "sort": true,
    "uniq": true,
    "awk": true,
    "sed": true,

    // Comando pipeline complexo para busca de arquivos
    "/^find .* \\| grep .* \\| head .*$/": true,

    // Node.js e execu√ß√£o
    "node": true,
    "npx": true,

    // Comandos espec√≠ficos do VS Code
    "code": true,

    // An√°lise de arquivos
    "file": true,
    "stat": true,
    "du": true,
    "which": true,
    "where": true,
    "diff": true,

    // Compress√£o/descompress√£o
    "tar": true,
    "zip": true,
    "unzip": true,
    "gzip": true,
    "gunzip": true,

    // Permiss√µes b√°sicas (n√£o destrutivas)
    "chmod +x": true,
    "chmod +r": true,
    "chmod +w": true,

    // Processos (apenas visualiza√ß√£o)
    "ps": true,
    "top": true,
    "htop": true
  },

  "github.copilot.chat.agent.terminal.denyList": {
    // ‚ö†Ô∏è REMO√á√ÉO DESTRUTIVA PERIGOSA
    "rm -rf /": true,
    "rm -rf /*": true,
    "rm -rf ~": true,
    "rm -rf $HOME": true,
    "rm -rf .": true,
    "rm -rf ..": true,

    // ‚ö†Ô∏è GIT DESTRUTIVO
    "git reset --hard HEAD~": true,
    "git clean -fd": true,
    "git push --force": true,
    "git push -f": true,

    // ‚ö†Ô∏è COMANDOS DE SISTEMA CR√çTICOS
    "sudo rm": true,
    "sudo rmdir": true,
    "sudo mv": true,
    "sudo chmod": true,
    "sudo chown": true,
    "kill -9": true,
    "killall": true,
    "pkill": true,

    // ‚ö†Ô∏è DOWNLOAD/EXECU√á√ÉO REMOTA
    "curl | sh": true,
    "wget | sh": true,
    "eval": true,
    "exec": true,

    // ‚ö†Ô∏è INSTALA√á√ÉO GLOBAL PERIGOSA
    "npm install -g": true,
    "yarn global add": true,
    "pnpm add -g": true,

    // ‚ö†Ô∏è PUBLICA√á√ÉO
    "npm publish": true,
    "yarn publish": true,
    "git push --tags": true,

    // ‚ö†Ô∏è MODIFICA√á√ÉO DE ARQUIVOS CR√çTICOS DO SISTEMA
    "mv /etc": true,
    "rm /etc": true,
    "chmod 000": true
  }
}
